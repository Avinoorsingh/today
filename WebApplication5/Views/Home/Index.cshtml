@model WebApplication5.Models.employee
@{
    ViewData["Title"] = "Home Page";
}

<a href="#" class="btn btn-success btn-lg" data-toggle="modal" data-target="#myModal">Click to subscribe</a>
<div class="modal fade" id="myModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title">Assignment by-Avinoor Singh</h3>
                <a href="#" class="close" data-dismiss="modal">&times;</a>
            </div>
            <div class="modal-body">
                <form asp-action="Index" class="form-horizontal" id="myForm">
                    <div class="form-group">
                        <label class="control-label">Email</label>
                        <input asp-for="email" class="form-control" style="width:400px;" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">First Name</label>
                        <input asp-for="fname" class="form-control" style="width:400px;" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Last Name</label>
                        <input asp-for="lname" class="form-control" style="width:400px;" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Country</label>
                        <input asp-for="country" class="form-control" style="width:400px;" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Subscription Frequency.</label>
                        <select asp-for="freq" class="form-control" style="width:400px;">
                            <option value="Daily">Daily</option>
                            <option value="Weekly">Weekly</option>
                            <option value="Monthly">Monthly</option>
                        </select>
                    </div>
                    <div class="form-group modal-footer">
                        <a href="#" class="btn btn-default" data-dismiss="modal">Cancel</a>
                        <input type="submit" values="Submit" class="btn btn-success" />
                    </div>
                </form>
            </div>
            @*<div class="modal-footer">
                <a href="#" class="btn btn-default" data-dismiss="modal">Cancel</a>
            </div>*@
        </div>
    </div>
</div>

